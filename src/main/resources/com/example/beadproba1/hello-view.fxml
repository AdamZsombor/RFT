<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.beadproba1.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Label text="Számtippelős játék">
         <font>
            <Font size="34.0" />
         </font>
      </Label>
      <Label text="Tippelj egy számot 1 és 50 között">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" />
      <Label fx:id="massageLabel" alignment="CENTER" textFill="#db0404">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="tippeltszamlabel" visible="false">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#szamteszt" text="Tipp">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <Button fx:id="restart" mnemonicParsing="false" onAction="#restarszam" text="Restart" textFill="#4a8242" visible="false">
         <font>
            <Font size="16.0" />
         </font></Button>
   </children>
</VBox>
